<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GetAccelerometer"
    android:id="@+id/activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Xaxis"
        android:layout_marginTop="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Yaxis"
        android:layout_below="@+id/Xaxis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Zaxis"
        android:layout_below="@+id/Yaxis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruszam!"
        android:id="@+id/BTC"
        android:onClick="BTClientActivate"
        android:layout_below="@+id/Zaxis"
        android:layout_alignLeft="@+id/BTFind"
        android:layout_alignStart="@+id/BTFind"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyslij"
        android:id="@+id/BTS"
        android:onClick="BTServerActivate"
        android:layout_alignTop="@+id/Xaxis"
        android:layout_alignLeft="@+id/BTFind"
        android:layout_alignStart="@+id/BTFind"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visible"
        android:id="@+id/VIS"
        android:onClick="BTVisible"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/BTFind"
        android:layout_alignStart="@+id/BTFind"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired list"
        android:id="@+id/pair"
        android:onClick="BTPairedList"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/BTS"
        android:layout_alignStart="@+id/BTS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BT FIND"
        android:id="@+id/BTFind"
        android:layout_below="@+id/BTC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/BTFind"
        android:minWidth="200dp"/>

</RelativeLayout>
